{
  "name": "style-guide",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all -s test:*",
    "test:js": "standard ./src/js/**/*.js --verbose | snazzy",
    "test:css": "stylelint ./src/css/**/*.css",
    "clean": "trash './dist/*' '!./dist/README.md'",
    "start": "npm-run-all -p server watch",
    "server": "watch-http-server dist",
    "watch": "npm-scripts-watcher",
    "build": "npm-run-all -p build:*",
    "build:static": "ncp ./src/static ./dist/static",
    "build:css": "postcss --use postcss-import autoprefixer postcss-cssnext postcss-browser-reporter postcss-reporter -o ./dist/main.css ./src/css/main.css",
    "build:js": "browserify ./src/js/main.js -o ./dist/main.js",
    "build:html": "node scripts/build/html"
  },
  "watch": {
    "src/js": [
      "build:js"
    ],
    "src/css": [
      "build:css"
    ],
    "src/templates": [
      "build:html"
    ],
    "src/static": [
      "build:static"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "browserify": "13.0.0",
    "fs-extra": "0.27.0",
    "glob": "7.0.3",
    "gray-matter": "2.0.2",
    "handlebars": "4.0.5",
    "handlebars-layouts": "3.1.3",
    "highlight.js": "9.3.0",
    "husky": "0.11.4",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "npm-scripts-watcher": "1.0.2",
    "pretty": "1.0.0",
    "rimraf": "2.5.2",
    "snazzy": "3.0.1",
    "standard": "6.0.8",
    "stylelint": "5.4.0",
    "trash-cli": "1.3.0",
    "watch-http-server": "0.7.6"
  },
  "standard": {
    "globals": [
      "$"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "dependencies": {
    "bootstrap": "3.3.6",
    "jquery": "2.2.3"
  }
}
